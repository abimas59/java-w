Var

   nomeAluno: caractere
   primeiraNota,segundaNota:real
   //Calcular média e verificar se foi aprovado.
funcao calcularMedia(a,b:real):real
inicio
   retorne(a+b)/2
fimfuncao

funcao verificarAprovacao(a:real):caractere
inicio
   se (a>=7) entao
      retorne("aprovado")
   senao
      retorne("reprovado")
   fimse
fimfuncao

